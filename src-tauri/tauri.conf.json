{
  "productName": "relay",
  "version": "0.0.1",
  "identifier": "org.holochain.relay",
  "build": {
    "beforeBuildCommand": "npm run build -w ui && npm run build:happ",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../ui/build"
  },
  "app": {
    "withGlobalTauri": false,
    "security": {
      "csp": null
    },
    "windows": []
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
